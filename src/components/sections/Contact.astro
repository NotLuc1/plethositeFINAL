---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import Heading from '../ui/Heading.astro';
import Button from '../ui/Button.astro';
---

<Section id="contact" background="gradient" class="py-32">
  <Container>
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16" data-fade>
        <Heading level={2} class="text-4xl md:text-6xl mb-6">
          GET IN TOUCH
        </Heading>
        <p class="text-xl text-chrome/60 max-w-3xl mx-auto">
          If you're a creator who wants to make more money and do less work, get in touch
        </p>
      </div>

      <form 
        class="space-y-8"
        data-fade
      >
        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-2">
            <label for="name" class="block text-sm text-chrome/80">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg bg-midnight-dark/50 border border-chrome/10 focus:border-neon-blue/50 focus:ring-1 focus:ring-neon-blue/50 transition-all duration-300 text-chrome placeholder-chrome/30"
              placeholder="Your name"
            />
          </div>

          <div class="space-y-2">
            <label for="email" class="block text-sm text-chrome/80">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg bg-midnight-dark/50 border border-chrome/10 focus:border-neon-blue/50 focus:ring-1 focus:ring-neon-blue/50 transition-all duration-300 text-chrome placeholder-chrome/30"
              placeholder="your@email.com"
            />
          </div>
        </div>

        <div class="space-y-2">
          <label for="subject" class="block text-sm text-chrome/80">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-lg bg-midnight-dark/50 border border-chrome/10 focus:border-neon-blue/50 focus:ring-1 focus:ring-neon-blue/50 transition-all duration-300 text-chrome placeholder-chrome/30"
            placeholder="How can we help?"
          />
        </div>

        <div class="space-y-2">
          <label for="message" class="block text-sm text-chrome/80">Message</label>
          <textarea
            id="message"
            name="message"
            required
            rows="6"
            class="w-full px-4 py-3 rounded-lg bg-midnight-dark/50 border border-chrome/10 focus:border-neon-blue/50 focus:ring-1 focus:ring-neon-blue/50 transition-all duration-300 text-chrome placeholder-chrome/30 resize-none"
            placeholder="Tell us about your project..."
          ></textarea>
        </div>

        <div class="flex justify-center">
          <Button type="submit" size="lg">
            Send Message
          </Button>
        </div>
      </form>

      <div class="mt-20 grid md:grid-cols-3 gap-8 text-center" data-fade>
