---
import NavLinks from './navigation/NavLinks.astro';
import MobileMenu from './navigation/MobileMenu.astro';
---

<header class="fixed w-full z-50 bg-black/90 backdrop-blur-sm">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold">
        Pletho
      </a>
      
      <NavLinks />

      <div class="flex items-center gap-4">
        <button class="hidden md:block bg-gradient-to-r from-primary-light to-primary hover:from-primary hover:to-primary-light px-6 py-2 rounded-full transition-all duration-300 text-white hover-glow">
          Partner With Us
        </button>
        
        <button 
          id="openMenu"
          class="md:hidden text-white p-2"
          aria-label="Open Menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<MobileMenu />