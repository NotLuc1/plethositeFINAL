---
import Container from './ui/Container.astro';
import Button from './ui/Button.astro';
import Logo from './ui/Logo.astro';
---

<section class="min-h-screen flex items-center justify-center relative overflow-hidden bg-black">
  <!-- Subtle grid background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[linear-gradient(rgba(30,58,138,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(30,58,138,0.02)_1px,transparent_1px)] bg-[size:72px_72px] [mask-image:radial-gradient(ellipse_at_center,black,transparent_70%)]"></div>
  </div>

  <!-- Ambient glow -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-900/5 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-blue-800/5 rounded-full filter blur-3xl"></div>
  </div>

  <Container>
    <div class="max-w-4xl mx-auto text-center space-y-8" data-fade>
      <!-- Pletho Logo -->
      <div class="flex flex-col items-center gap-8">
        <div class="w-48 h-48 relative">
          <img 
            src="/images/media/logo1_processed.png" 
            alt="Pletho Logo" 
            class="w-full h-full object-contain filter drop-shadow-[0_0_15px_rgba(66,165,245,0.3)]"
          />
        </div>
        <Logo size="lg" class="mx-auto" />
      </div>
      
      <p class="text-xl md:text-2xl text-chrome/60 mb-8 max-w-3xl mx-auto">
        We help creators make more money and work less.
      </p>
      
      <div class="flex flex-col md:flex-row gap-6 justify-center">
        <Button href="#services" size="lg">
          Get Started Today
        </Button>
        <Button href="#track-record" variant="neon" size="lg" class="hover:text-white transition-colors">
          Our Track Record
        </Button>
      </div>
    </div>
  </Container>
</section>